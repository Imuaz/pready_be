# Copy to .env and fill in real values. Do NOT commit your real .env.

# Server Configuration
PORT=5000
NODE_ENV=development
SALTROUNDS=12

# Reverse proxy / load balancer support (affects req.ip + rate limiting)
# - direct-to-node (no proxy): TRUST_PROXY=false (or leave unset)
# - behind 1 proxy (nginx / render / railway / ELB): TRUST_PROXY=1
# - behind multiple proxies: TRUST_PROXY=2 (or correct hop count)
# Never enable this unless your proxy strips/sets X-Forwarded-For correctly.
TRUST_PROXY=false

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster-host>/<db>?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=<long-random-secret>
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=<long-random-secret>
JWT_REFRESH_EXPIRE=30d

# Email Configuration (e.g., Mailtrap for development)
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=<user>
EMAIL_PASS=<pass>
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME="Master Backend"

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Token Expiry (in milliseconds)
EMAIL_VERIFY_TOKEN_EXPIRE=3600000
PASSWORD_RESET_TOKEN_EXPIRE=3600000

